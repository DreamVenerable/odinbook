<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, class: "input-label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "name", class: "input-field" %>
  </div> <br />

  <div class="field">
    <%= f.label :email, class: "input-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
  </div> <br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "input-label" %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div> <br />

  <div class="field">
    <%= f.label :password_confirmation, class: "input-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
  </div> <br />

  <div class="field">
    <%= f.label :current_password, class: "input-label" %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input-field" %>
  </div> <br />

  <div class="actions">
    <%= f.submit "Update", class: "btn-primary" %>
  </div>
<% end %>


<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn-primary dark:bg-red-600 dark:hover:bg-red-700" %></div>

<%= link_to "Back", :back %>
